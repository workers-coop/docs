---
extends: default
yaml-files:
  - .gitlab-ci.yml
  - .markdownlint.yaml
  - mkdocs.yml
  - .pre-commit-config.yaml
  - .yamllint
rules:
  braces:
    max-spaces-inside: 1
    level: error
  brackets:
    max-spaces-inside: 1
    level: error
  line-length: disable
  comments-indentation: disable
# vim: syntax=yaml
...
